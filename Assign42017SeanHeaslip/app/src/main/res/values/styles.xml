<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Theme colors. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- TextView tableview-->
    <style name="OrderPrescripTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txtsize</item>
        <item name="android:paddingLeft">@dimen/default_Padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:padding">24dp</item>

    </style>

    <!--Edit Text Styles-->
    <style name="styleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txtsize</item>
        <item name="android:padding">@dimen/default_Padding</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textColorHint">@color/colorPrimary</item>

    </style>

    <style name="TxtViewCommonStyles">
        <item name="android:textSize">@dimen/txtsize</item>
        <item name="android:padding">@dimen/default_Padding</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
